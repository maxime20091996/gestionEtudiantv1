<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="gestion-etu">
        <properties>
        
        	<!-- 1) Configuration de la  BDD -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/gestionetudiant?serverTimezone=UTC" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />
            
            <!-- 2) Indique a Hibernate de (re-)créer les tables au lancement de l'application -->
            <property name="hibernate.hbm2ddl.auto" value="update" />
            
            <!-- 3) Spécifie le 'dialecte' SQL utilisé pour communiquer avec la BDD -->
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" /> -->
            
           	<!-- 4) Il va detecter les class annotée @Entity au niveau du chargement de l'app --> 
            <property name="hibernate.archive.autodetection" value="class" />
            
            <!-- 5) Voire les requête générée par hibernate -->
            <property name="hibernate.show_sql" value="true" /> 
            
            <!-- 6) Formater l'écriture des requêtes générées par hibernate (visibles dans la console en true) -->
            <property name="hibernate.format_sql" value="true" />
            
        </properties>
 
    </persistence-unit>
</persistence>